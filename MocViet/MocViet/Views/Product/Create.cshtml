@model BussinessLayer.DTOs.Product.ProductCreateDto

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stock</label>
        <input asp-for="Stock" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SellerId" class="form-label">Seller</label>
        <select asp-for="SellerId" class="form-control" asp-items="@(new SelectList(ViewBag.Sellers, "Id", "FullName"))">
            <option value="">-- Select Seller --</option>
        </select>
        <span asp-validation-for="SellerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Images" class="form-label">Product Images</label>
        <input asp-for="Images" class="form-control" type="file" multiple />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @(Html.RenderPartialAsync("_ValidationScriptsPartial"))
}




