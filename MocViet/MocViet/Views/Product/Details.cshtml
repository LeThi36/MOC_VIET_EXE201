@model DataLayer.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Description</h4>
        <p>@Model.Description</p>

        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Stock:</strong> @Model.Stock</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Seller:</strong> @Model.Seller?.FullName</p>
    </div>

    <div class="col-md-6">
        <h4>Images</h4>
        @if (Model.ProductImages != null && Model.ProductImages.Any())
        {
            <div class="row">
                @foreach (var img in Model.ProductImages)
                {
                    <div class="col-md-4 mb-2">
                        <img src="@img.ImageUrl" class="img-thumbnail" style="width: 100%; height: auto;" />
                    </div>
                }
            </div>
        }
        else
        {
            <p>No images available.</p>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
