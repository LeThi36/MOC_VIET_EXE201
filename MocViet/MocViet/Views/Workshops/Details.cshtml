@model MocViet.ViewModel.Workshop.WorkshopDetailsVm

@{
    ViewData["Title"] = "Chi tiết Workshop";
}

<h1>@Model.Title</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Mô tả</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Bắt đầu</dt>
    <dd class="col-sm-10">@Model.StartTime?.ToString("f")</dd>

    <dt class="col-sm-2">Kết thúc</dt>
    <dd class="col-sm-10">@Model.EndTime?.ToString("f")</dd>

    <dt class="col-sm-2">Số người tối đa</dt>
    <dd class="col-sm-10">@Model.MaxParticipants</dd>

    <dt class="col-sm-2">Phí tham dự</dt>
    <dd class="col-sm-10">@Model.Fee:C</dd>

    <dt class="col-sm-2">Trạng thái</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Người tổ chức</dt>
    <dd class="col-sm-10">@Model.HostName</dd>

    <dt class="col-sm-2">Địa điểm</dt>
    <dd class="col-sm-10">@Model.LocationAddress</dd>

    <dt class="col-sm-2">Ngày tạo</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Quay về danh sách</a>
    @if (User.IsInRole("Seller"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
    }
</p>